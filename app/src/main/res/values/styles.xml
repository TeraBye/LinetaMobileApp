<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:statusBarColor">@android:color/transparent</item>


    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="FullScreenBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/FullScreenBottomSheetStyle</item>
    </style>

    <style name="FullScreenBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FacebookIconButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="cornerRadius">22.5dp</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="ActionButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">#000000</item>
        <item name="iconPadding">8dp</item> <!-- KHÔNG có android: -->
        <item name="iconGravity">textStart</item>
        <item name="android:textColor">#000000</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
    <style name="RoundedAvatar" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>






</resources>
